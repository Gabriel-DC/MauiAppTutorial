<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTutorial.TabbedPageDemo"
             Title="TabbedPageDemo">
    <ContentPage Title="Page 1"
                 BackgroundColor="BlanchedAlmond"
                 IconImageSource="dotnet_bot.svg">
        <Label Text="Pagina 1"
               FontSize="Large"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"></Label>
    </ContentPage>
    <ContentPage Title="Page 2"
                 BackgroundColor="CadetBlue"
                 IconImageSource="settings_icon.svg">
        <Label Text="Pagina 2"
               FontSize="Large"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"></Label>
    </ContentPage>
    <ContentPage Title="Page 3" BackgroundColor="Yellow">
        <Label Text="Pagina 3"
               FontSize="Large"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"></Label>
    </ContentPage>
    <ContentPage Title="Page 4">
        <Label Text="Pagina 4"
               FontSize="Large"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"></Label>
    </ContentPage>
</TabbedPage>